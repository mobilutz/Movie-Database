%h1 Registrierung

= form_for @user, html: {class: 'form-horizontal'} do |f|
  - if @user.errors.any?
    .alert.alert-error
      %a.close{data: {dismiss:"alert"}}×
      - @user.errors.full_messages.each do |message|
        = message
        %br/
  .control-group
    = f.label :email, 'E-Mail', class: 'control-label'
    .controls
      = f.text_field :email
  .control-group
    = f.label :password, 'Passwort', class: 'control-label'
    .controls
      = f.password_field :password
  .control-group
    = f.label :password_confirmation, 'Passwortbestätigung', class: 'control-label'
    .controls
      = f.password_field :password_confirmation
  .control-group
    .controls
      = f.submit 'Anmelden', class: 'btn'
